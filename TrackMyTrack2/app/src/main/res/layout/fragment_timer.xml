<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="trackmytrack.azurewebsites.net.TimerFragment">

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chronometer2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="128dp"
        android:height="96sp"
        android:width="288sp"
        android:textSize="64sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START"
        android:id="@+id/TimerStart"
        android:layout_below="@+id/chronometer2"
        android:layout_alignRight="@+id/chronometer2"
        android:layout_alignEnd="@+id/chronometer2"
        android:layout_alignLeft="@+id/chronometer2"
        android:layout_alignStart="@+id/chronometer2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PAUSE"
        android:id="@+id/TimerPause"
        android:layout_below="@+id/TimerStart"
        android:layout_alignRight="@+id/TimerStart"
        android:layout_alignEnd="@+id/TimerStart"
        android:layout_alignLeft="@+id/TimerStart"
        android:layout_alignStart="@+id/TimerStart" />
</RelativeLayout>
