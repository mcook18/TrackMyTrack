<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="trackmytrack.azurewebsites.net.StopWatch">

    <Chronometer
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/chronometer"
        android:layout_marginTop="212dp"
        android:height="96sp"
        android:textSize="64sp"
        android:width="288sp"
        style="@style/Base.Theme.AppCompat"
        android:editable="true"
        android:enabled="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="START"
        android:id="@+id/StartStopBT"
        android:layout_below="@+id/chronometer"
        android:layout_alignLeft="@+id/chronometer"
        android:layout_alignStart="@+id/chronometer"
        android:layout_alignRight="@+id/chronometer"
        android:layout_alignEnd="@+id/chronometer"
        android:height="56sp"
        android:textSize="35dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="Lap Time"
        android:id="@+id/LapBt"
        android:height="56sp"
        android:layout_below="@+id/StartStopBT"
        android:layout_alignRight="@+id/StartStopBT"
        android:layout_alignEnd="@+id/StartStopBT"
        android:layout_alignLeft="@+id/StartStopBT"
        android:layout_alignStart="@+id/StartStopBT"
        android:textSize="35dp" />
</RelativeLayout>
