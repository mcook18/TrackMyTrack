<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="trackmytrack.azurewebsites.net.ProfilePageEdit">

    <ImageButton
        android:layout_width="169dp"
        android:layout_height="169dp"
        android:id="@+id/PEpicEditIB"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/PENamedis"
        android:layout_alignTop="@+id/PEpicEditIB"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/PEpicEditIB"
        android:layout_toStartOf="@+id/PEpicEditIB"
        android:contentDescription="Name goes here" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/PESchooldis"
        android:layout_below="@+id/PENamedis"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/PEpicEditIB"
        android:layout_toStartOf="@+id/PEpicEditIB"
        android:contentDescription="School goes here" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Events:"
        android:id="@+id/PEeventsdis"
        android:layout_below="@+id/PESchooldis"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PEentEvents"
        android:layout_below="@+id/PEeventsdis"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/PEpicEditIB"
        android:layout_toStartOf="@+id/PEpicEditIB"
        android:hint="What events do you do?"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Bio:"
        android:id="@+id/PEbio"
        android:layout_below="@+id/PEentEvents"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/PEentbio"
        android:layout_below="@+id/PEpicEditIB"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Tell everyone a little about yourself, so they can get to know you. For example what do you do outside of track and field?"
        android:layout_alignRight="@+id/PEpicEditIB"
        android:layout_alignEnd="@+id/PEpicEditIB"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Records:"
        android:id="@+id/PErecords"
        android:layout_below="@+id/PEentbio"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Event 1:"
        android:id="@+id/PEevent1"
        android:contentDescription="This person&apos;s first event goes here."
        android:layout_below="@+id/PErecords"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PEevent1recENT"
        android:hint="Record for your first event."
        android:layout_alignTop="@+id/PEevent1"
        android:layout_alignLeft="@+id/PEevent2recENT"
        android:layout_alignStart="@+id/PEevent2recENT" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Event 2:"
        android:id="@+id/PEevent2"
        android:layout_below="@+id/PEevent1recENT"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="this is the person&apos;s second event." />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PEevent2recENT"
        android:hint="Record for second event."
        android:layout_below="@+id/PEevent2"
        android:layout_toRightOf="@+id/PErecords"
        android:layout_toEndOf="@+id/PErecords" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Profile"
        android:id="@+id/PEsaveBT"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
